<div class="container">
   <div class="row">
    <div class="cards">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path cocktail.image? ? cocktail.image : "zkxgfufzlypo0l782cly" %>)";>
        <div class="card-description">
          <h2><%= cocktail.name %></h2>
        </div>
      <%= link_to "", cocktail_path(cocktail), class: "card-link"  %>
      </div>
     </div>
    <% end %>
    </div>
</div>
