<h1><%= @cocktail.name %></h1>
<h2>Description</h2>
<ul class="list-unstyled">
<% @cocktail.doses.each do |dose| %>
  <li>
   <%= dose.description %> - <%= dose.ingredient.name %>  <%= link_to dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } do %>
      <i class="fa fa-trash" aria-hidden="true"></i>
      <% end %>
  </li>
<% end %>
</ul>
<hr>
<%= link_to "Our Cocktails", cocktails_path %>
<hr>


<h3>Add a dose to this cocktail</h3>
<%= simple_form_for([@cocktail, @dose]) do |f| %>
<%= f.input :description %>
<%= f.association :ingredient %>
<%= f.submit class: "btn btn-primary"%>
<% end %>
