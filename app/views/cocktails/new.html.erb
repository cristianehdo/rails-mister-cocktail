
<div class="container-white">

<h1>Add a new Cocktail</h1>


<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <%= simple_form_for(@cocktail) do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :image %>
      <%= f.input :image_cache, as: :hidden %>
      <%= f.submit "create cocktail", class: "btn btn-white" %>
    <% end %>
    </div>
  </div>
</div>
